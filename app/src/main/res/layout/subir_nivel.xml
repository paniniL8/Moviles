<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- LinearLayout para las preguntas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <!-- Título de la actividad -->
        <TextView
            android:id="@+id/questionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Responde las siguientes preguntas para subir de nivel!"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Nivel actual -->
        <TextView
            android:id="@+id/currentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel actual: 1"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Pregunta 1 -->
        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿De qué forma sube el agua al cielo durante el ciclo del agua?"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/question1Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por evaporación"
                android:paddingEnd="8dp"/>
            <RadioButton
                android:id="@+id/answer1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como vapor" />
            <RadioButton
                android:id="@+id/answer1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por absorción" />
        </RadioGroup>

        <!-- Pregunta 2 -->
        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué pasa con el agua cuando se condensa en las nubes?"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/question2Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se convierte en vapor"
                android:paddingEnd="8dp"/>
            <RadioButton
                android:id="@+id/answer2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se convierte en nieve" />
            <RadioButton
                android:id="@+id/answer2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se convierte en lluvia" />
        </RadioGroup>

        <!-- Pregunta 3 -->
        <TextView
            android:id="@+id/question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué planeta está más cerca del Sol?"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/question3Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venus"/>
            <RadioButton
                android:id="@+id/answer3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marte"/>
            <RadioButton
                android:id="@+id/answer3c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tierra"/>
            <RadioButton
                android:id="@+id/answer3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mercurio" />
        </RadioGroup>

        <!-- Pregunta 4 -->
        <TextView
            android:id="@+id/question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuántos planetas hay en el sistema solar?"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/question4Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"/>
            <RadioButton
                android:id="@+id/answer4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"/>
            <RadioButton
                android:id="@+id/answer4c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"/>
        </RadioGroup>

        <!-- Pregunta 5 -->
        <TextView
            android:id="@+id/question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué es un ecosistema?"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/question5Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un lugar donde viven los animales y las plantas"/>
            <RadioButton
                android:id="@+id/answer5b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un lugar donde solo hay agua"/>
            <RadioButton
                android:id="@+id/answer5c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un lugar solo con plantas" />
        </RadioGroup>

        <!-- Botón para enviar respuestas -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar respuestas"
            android:layout_gravity="center"
            android:paddingTop="16dp"/>

    </LinearLayout>
</ScrollView>
